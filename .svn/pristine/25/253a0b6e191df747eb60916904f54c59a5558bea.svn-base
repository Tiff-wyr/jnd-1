<script>
  import footerSame from '../component/footerSame'
  import wradio from '../component/w-radios'
  import wcheckbox from '../component/w-checkBox'
    export default {
      name: "Agent",
      components:{
        footerSame,
        wradio,
        wcheckbox
      },
      data(){
          return {
            isMask:false,
            viewing:false,
            isShowing:true,
            showing:true,
            cityUp: false,    // 城市是否展开
            verifyCode:'获取验证码',
            time:'60',
            labelPosition: 'right',
            formLabelAlign:{
              name:'',
              money:'',
              number:'',
              card:''
            },
            tableData:[],

            loans:[
              {value: '00',label: '不限'},
              {value: '01',label: '信用贷款'},
              {value: '02',label: '抵押贷款'},
            ],
            business:[
              {value: '00',label: '不限'},
              {value: '01',label: '个人贷款'},
              {value: '02',label: '企业贷款'},
            ],
            goods:[],     // 擅长业务
            cities: [],   //业务地区
            query: {
              city: '',
              loan:'',
              business:'',
              good:''
            },
            pn: 1,
            page: 5,
            count: 0,
          }
      },
      watch: {
        'query.city': function(val) {
          this.$message.info(val)
        },
        'query.loan':function (val) {
          this.$message.info(val)
        }

      },
      methods:{
        send(){
          this.showing=false;
          let timer=setInterval(()=>{
            this.time--
            if(this.time < 0){
              clearInterval(timer)
              this.showing=true
              this.verifyCode='重新获取'
              this.time=60
            }
          },1000)


        },
        // 获取列表数据
        getData () {
          let data = {
            pn: this.pn,
            page: this.page
          }
          this.$axios.get(`userBroker/showPageUserBrokerByCondition`, data).then(res => {
            this.tableData = res.rows
            this.count = res.total
          })
        },
        // 获取擅长业务
        getGoods () {
          this.$axios.get(`business/getAllBusiness`).then(res => {
            this.goods = res.map(item => {
              return {value: item.businessId, label: item.business }
            })
          })
        },
        //获取地区
        getCity(){
          this.$axios.get('city/getAHotCity').then(res=>{
            this.cities=res.map(item=>{
              return {value: item.hid, label: item.cname }
            })
          })
        },
        //经纪人详情
        detail(id){
          this.$router.push(`agentDetail/${id}`)
        },
        handleCurrentChange (val) {
          this.pn = val
          this.getData()
        },
        handleSizeChange (val) {
          this.page = val
          this.getData()
        },
        mask(){
          this.isMask=true
          this.viewing=true
        },
        applyLoan(){
          setTimeout(()=>{
            this.isShowing=false
          },500)
        },
        returnF(){
          setTimeout(()=>{
           this.$router.push('/home')
          },500)
        },
        closeW(){
          setTimeout(()=>{
            this.isMask=false
            this.viewing=false
            this.isShowing=true
          },500)
        },
        //  展开或关闭城市
        citySpread() {
          this.cityUp = !this.cityUp
        }
      },
      created () {
        this.getData()
        this.getGoods()
        this.getCity()
      }
    }
</script>

