<script>
  import registerTop from '../component/registerTop'
  import imgUpload from '../component/imgUpload'
  import wcheckbox from '../component/w-checkBox'

  export default {
    components:{
      registerTop,
      imgUpload,
      wcheckbox
    },
    data () {
      return {
        radio2: 3,
        showing:true,
        time:60,
        verifyCode:'发送验证码',
        formData:{
          broker:'',
          phone:'',
          userPassword:''
        },
        isMask:false,
        isBusiness:false,
        tags:['无抵押信用贷款',
          '房产抵押',
          '汽车抵押',
          '个人经营性商务贷款',
          '个人消费贷款',
          '个人抵押贷款'],
        selectTags: [],
        query:{
          tag:'',
        }
      };
    },
    methods:{
      loginPush(){
        this.$router.push('/home')
      },
      send(){
        this.$axios.get(`/base/getRegisterCode/${this.formData.phone}`).then(res=>{
          console.log(res)
        })
        this.showing=false;
        let timer=setInterval(()=>{
          this.time--
          if(this.time < 0){
            clearInterval(timer)
            this.showing=true
            this.verifyCode='重新获取'
            this.time=60
          }
        },1000)


      },
      register(){
        this.$axios.post('/userBroker/showAllUserBroker',this.formData).then(res=>{
          console.log(res)
        })
      },
      goodMask(){
        this.isMask=true
        this.isBusiness=true
      },
      // 添加选择的业务标签
      HandleSelsectTags(e) {
        let text = e.target.innerText.trim()
        let value = text.split('+')[1]
        let index = this.selectTags.indexOf(value)
        if ( index !== -1) {
          this.selectTags.splice(index, 1)
        } else {
          this.selectTags.push(value)
        }
      },
      // 移除选中的业务标签
      removeSelectTag(index){
        this.selectTags.splice(index, 1)
      }
    }
  }
</script>

