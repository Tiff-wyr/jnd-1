<script>
  import registerTop from '../component/registerTop'
  import imgUpload from '../component/imgUpload'
  import {mapState, mapMutations} from 'vuex'
    export default {
        name: "organRegister",
      components:{
        registerTop,
        imgUpload
      },
      computed: {
        ...mapState(['userInfo'])
      },
      data () {
        return {
          showing:true,
          time:60,
          verifyCode:'发送验证码',
          organMess:{
            agencyProperty:[],//机构属性
            agencyName:'',
            agencyCode:'',
            agencyIntroduction:'',
            startBusiness:'',
            endBusiness:'',
            agencyLicense:'',
            agencyAddress:'',
            agencyAddress1:'',
            agencyUsername:'',
            agencyIdentity:'',
            phone:'',
            email:'',
            password:''
          },
          options: [
            {
            value: '1',
            label: '代理服务'
            },
            {
            value: '2',
            label: '自有资金'
            }
            ],
          //省
          provinceData:[
            {
              pid:'',
              provincial:'',
            }
          ],
          //市 区
          cityData:[
            {
              cid:'',
              city:'',
              pid:'',
            }
          ]

        };
      },
      methods:{
        ...mapMutations(['SET_USER']),
        //  获取验证码
        send(){
            if (this.organMess.phone) {
              this.showing=false;
              this.$axios.post(`base/getRegisterCode/${this.organMess.phone}`).then(res => {
                let timer=setInterval(()=>{
                  this.time--
                  if(this.time < 0){
                    clearInterval(timer)
                    this.showing=true
                    this.verifyCode='重新获取'
                    this.time=20
                  }
                },1000)
              })
            } else {
              this.$message.warning('请输入手机号')
            }
        },
        // 注册
        register(){
           this.checkForm().then(()=>{
             let data=new FormData()
             for (let item in this.organMess){
               if(item === 'agencyProperty'){
                 data.append(item,this.organMess[item].join(','))
               }
               else {
                 data.append(item, this.organMess[item])
               }
             }
             this.$axios.post('userAgency/registerAgency',data).then(res=>{
               console.log('注册了',res)
               if(res.status === 200){
                 this.$message.success(res.msg)
                 this.$router.push('/home')
               }
             })
           })
        },
        //  检测organMess数据
        checkForm() {
          return new Promise(resolve => {
            if (this.organMess.agencyName === '') {
              this.$message.error('用户名不能为空')
            } else if(this.organMess.password === ''){
              this.$message.error('所在地不能为空')
            } else if(this.organMess.phone === '') {
              this.$message.error('手机号不能为空')
            } else {
              resolve()
            }
          })
        },
        //  检测手机号是否被注册
        checkPhone() {
            if (this.organMess.phone) {
              this.$axios.get(`user/checkUserByPhone/${this.organMess.phone}`).then(res => {
                if(res.status === 500) {
                  this.$message.warning(res.msg)
                  this.organMess.phone = ''
                } else {
                  return
                }
              })
            } else {
             this.$message.warning("手机号已被注册")
            }
        },
        loginPush(){
          this.$router.push('/home')
        },
        //获取省
        getProvince(){
          this.$axios.get('city/getAllProvincial').then(res=>{
            this.provinceData=res
          })
        },
        //获取 市 区
        getCity(val){
            this.$axios.get(`city/getAllCity/${val}`).then(res=>{
              this.cityData=res
            })
          },
      },
      created(){
          this.getProvince()
      }
    }
</script>

