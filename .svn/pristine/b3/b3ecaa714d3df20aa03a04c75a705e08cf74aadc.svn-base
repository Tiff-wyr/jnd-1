                <div class="text1 fll" v-else @click="personDetail(userInfo.roleId,userInfo.id)">{{userInfo === null? '' : userInfo.phone}}</div>
              </div>
              <div class="text2 fll">&nbsp;|&nbsp;</div>
              <div>
