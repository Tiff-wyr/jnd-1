<script>
  import {mapState} from 'vuex'
  export default {
    name: "agentResource",
    data(){
      return {
        checked:true,
        isMask:false,
        isContain:false,
        tableData: [
          {
            borrowerId:'',
            borrowerAge:'',
            borrowerName: '',
            address: '',
            borrowerSex:'',
            phone:''
          },
        ],
        page: 1,
        size: 10,
        count: 1,
        vipType: '',
        payType: '',
        isJoin:true,


      }
    },
    methods:{
      handleSelectionChange(val) {

      },
      handleCurrentChange (val) {
        this.page = val
        this.getData()
      },
      handleSizeChange (val) {
        this.size = val
        this.getData()
      },
      //立即查看
      look(){
        //判断 是否为会员
        this.$axios.get(`userBroker/checkIsVipOrCount/${this.$store.state.userInfo.phone}`).then(res=>{
          console.log('look',res);
          if(res === 1){
            this.isJoin=false
          }else {
            this.isMask=true
            this.isContain=true
          }
        })

      },
      //加入资源
      joinResource(id){
        let data = new FormData()
        data.append('borrowerId',id)
        data.append('brokerId',this.$store.state.userInfo.id)
        this.$axios.post(`brokerResource/saveBrokerResource`,data).then(res=>{
          if(res.status === 200){
            this.$axios.get(`vipClick/getVipCountByPhone/${this.$store.state.userInfo.phone}`).then(res=>{
              if(res >= 1){
               this.$axios.get(`vipClick/deleteVipClickCount/${this.$store.state.userInfo.phone}`).then(res=>{
                 this.$message.success("成功加入")
                 this.getData()
               })
              }
            })


          }
        })
      },
      //支付
      pay(){
        //付款
        if(this.vipType && this.payType === '1'){
          //支付宝付款
          this.$axios.get(`alipay/pay/${this.$store.state.userInfo.phone}/${this.vipType}/${this.payType}`).then(res=>{
            window.open(`http://192.168.0.123:8082/alipay/pay/${this.$store.state.userInfo.phone}/${this.vipType}/${this.payType}`);
          })
        }


      },
      //  关闭蒙版
      closeMask() {
        this.isMask = false
        this.isContain = false
      },
      //资源中心列表
      getData(){
        this.$axios.get(`brokerResource/getPageBorrowerByBrokerIdUnPaid/${this.$store.state.userInfo.id}?pn=${this.page}&page=${this.size}`).then(res=>{
          this.tableData=res.rows
          this.count=res.total
        })
      }

    },
    created(){
      this.getData()
    },
    computed: {
      ...mapState(['userInfo'])
    },
  }
</script>

