        ],
        loanType:[],
        optionBuss: [
          {
            value: '1',
            label: '个人贷'
          },
          {
            value: '2',
            label: '企业贷'
          }
        ],
        bussClassify:[],
        isShowTag:false,
        radio2: 3,
        showing:true,
        time:60,
        verifyCode:'发送验证码',

        formData:{
          brokerId:'',//经纪人编号
          brokerName:'',//经纪人姓名
          phone:'',//手机号
          image:'',//图片
          sex:'',//性别
          introduction:'',//个人简介
          job:'',//部门职位
          age:'',//部门职位
          recommended:'',//推荐指数
          identity:'',//身份证号
          email:'',//邮箱
          address:'',//住址
          company:'',//所属公司
          businessArea1:'',//业务地区
          businessArea2:'',//业务地区
          businessScope:'',//业务范畴
          businessIntroduction:'',//业务介绍
          code:'',

        },

        isMask:false,
        isBusiness:false,
        tags:[
          {
            businessId:'',
            business:'',
          }
        ],
        selectTags: [
          {
            businessId:'',
            business:'',
          }
        ],
        query:{
          tag:'',
        },
        //省
        provinceData:[
          {
            pid:'',
            provincial:'',
          }
        ],
        //市 区
        cityData:[
          {
            cid:'',
            city:'',
            pid:'',
          }
        ]
      };
    },
    methods:{
      xLoan(){
        this.isXLoan=!this.isXLoan
      },
      cLoan(){
        this.isCarLoan=!this.isCarLoan
      },
      fLoan(){
        this.isFLoan=!this.isFLoan
      },
      qLoan(){
        this.isQLoan=!this.isQLoan
      },
      //保存标签
      saveTag(){
        this.isMask=false
        this.isBusiness=false
        this.isShowTag=true
      },
      //取消标签
      cancelTag(){
        this.isMask=false
        this.isBusiness=false
        this.isShowTag=false
      },
      loginPush(){
        this.$router.push('/home')
      },
      send(){
        this.$axios.get(`/base/getRegisterCode/${this.formData.phone}`).then(res=>{
          console.log(res)
        })
        this.showing=false;
        let timer=setInterval(()=>{
          this.time--
          if(this.time < 0){
            clearInterval(timer)
            this.showing=true
            this.verifyCode='重新获取'
            this.time=60
          }
        },1000)


      },
      register(){
        this.$axios.post('/userBroker/showAllUserBroker',this.formData).then(res=>{
          console.log(res)
        })
      },
      goodMask(){
        this.isMask=true
        this.isBusiness=true
      },
      // 添加选择的业务标签
      HandleSelsectTags(e) {
        let text = e.target.innerText.trim()
        let value = text.split('+')[1]
        let index = this.selectTags.indexOf(value)
        if ( index !== -1) {
          this.selectTags.splice(index, 1)
        } else {
          this.selectTags.push(value)
        }
      },
      // 移除选中的业务标签
      removeSelectTag(index){
        this.selectTags.splice(index, 1)
      },
      //获取省
      getProvince(){
        this.$axios.get('city/getAllProvincial').then(res=>{
          this.provinceData=res
        })
      },
      //获取 市 区
      getCity(val){
        this.$axios.get(`city/getAllCity/${val}`).then(res=>{
          this.cityData=res
        })
      },
      //获取擅长业务标签
      getGoodBusiness(){
        this.$axios.get('business/getAllBusiness').then(res=>{
          this.tags=res
        })
      }
    },
    created(){
      this.getProvince()
      this.getGoodBusiness()
    }
  }
</script>

