<script>
  import layout from '../layout/layout'
  import footerSame from '../component/footerSame'

  export default {
    name: "organDetail",
    components: {
      layout,
      footerSame
    },
    data() {
      return {
        isCollect:true,
        businessArea1:'',
        businessArea2:'',
        showing: true,
        time: 20,
        organId:'',
        verifyCode: '发送验证码',
        radio1: '1',
        radio2: '1',
        organDetail: {
          agencyId: '',
          // 机构名称
          agencyName: '',
          // 机构属性
          agencyProperty: '',
          // 机构代码
          agencyCode: '',
          // 机构介绍
          agencyIntroduction: '',
          // 营业执照
          agencyLicense: '',
          // 成立年限
          agencyAgeLimit: '',
          // 营业期限
          startBusiness: '',
          endBusiness: '',
          // 机构网址
          agencyURL: '',
          // 所属公司
          companyOwned: '',
          // 机构所在地
          agencyAddress: '',
          // 填写人姓名
          agencyUsername: '',
          // 填写人身份
          agencyIdentity: '',
          // 填写人手机号
          phone: '',
          // 填写人邮箱
          email: '',
          // 邮箱是否认证
          emailAuthentication: '',
          // 机构logo
          agencyLogo: '',
          // 是否是会员
          member: '',
          // 会员期限
          memberTime: '',
          // 服务客户
          agencyTotalService: '',
          // 批贷总额
          agencyLoansAmount: '',
          // 实名认证
          nameAuthentication: '',
          // 营业执照认证
          licenseAuthentication: '',
          // 推荐指数
          agencyStar: '',
          // 注册时间
          agencyTime: '',
          // 被浏览次数
          agency1: ''
        },
        loanData: [
          {
            borName: '',
            proName:'',
            proInterest:'',
            proAmount: ''

          },
        ],
        productData: [
          {
            productName:'',// 产品名称
            productPublisher:'',// 发行机构
            productInterest:'',// 利息
            productLife:'',// 使用年限
            producLoanLength:'',// 放款时间
            productStartAmount:'',	// 额度
          }
        ],
        //省
        provinceData:[
          {
            pid:'',
            provincial:'',
          }
        ],
        //市 区
        cityData:[
          {
            cid:'',
            city:'',
            pid:'',
          }
        ],
        //申请贷款
        borrowerData:{
          borrowerName:'',
          loanAmount:'',
          borrowerAddress:'',
          borrower2:'',
          borId:this.$store.state.userInfo.id,// 借款人id
          agencyId:this.organId,
          mortgage:'',// 有无抵押
          collateral:[],// 抵押物
          loanType:'',// 贷款类型
        }
      }
    },
    methods: {
      //发送消息
      sendMess(){
        if (this.$store.state.userInfo.roleId === 1){
          this.$router.push({path:`/myMessage/${this.$store.state.userInfo.id}/messageCenter`,query:{id:this.agentId}})
        }

      },
      lookDetail(id){
        this.$router.push(`productDetail/${id}`)
      },
      //获取省
      getProvince(){
        this.$axios.get('city/getAllProvincial').then(res=>{
          this.provinceData=res
        })
      },
      //获取 市 区
      getCity(val){
        this.$axios.get(`city/getAllCity/${val}`).then(res=>{
          this.cityData=res
        })
      },
      send() {
        this.showing = false;
        let timer = setInterval(() => {
          this.time--
          if (this.time < 0) {
            clearInterval(timer)
            this.showing = true
            this.verifyCode = '重新获取'
            this.time = 20
          }
        }, 1000)


      },
      //机构详情
      getDetail(id) {
        this.$axios.get(`userAgency/selectUserAgencyById/${id}`).then(res => {
          this.organDetail = res
        })
      },

      //机构代理的产品
      getProduct(id) {
        this.$axios.get(`product/selectProductByAgency/${id}/1/4`).then(res => {
          this.productData = res.list
        })
      },
      //机构的成功案例
      getVictory(id) {
        this.$axios.get(`orderAgency/getAgencySuccessOrder/${id}`).then(res=>{
            this.loanData=res

        })
      },
      //收藏机构
      restore(){
        if(this.$store.state.userInfo){
          if(this.$store.state.userInfo.roleId === 1){
            this.$axios.post(`borAgency/addBorAgency?borId=${this.$store.state.userInfo.id}&agencyId=${this.organId}`).then(res=>{
              this.isCollect=false
              this.$message.success("收藏成功")
            })
          }else{
            this.$message.warning("借款人方可收藏")
          }
        }else{
          this.$message.warning("请先登录")
        }

      },
      //取消机构
      cancelRestore(){
        this.$axios.post(`borAgency/deleteBorAgency?borId=${this.$store.state.userInfo.id}&agencyId=${this.organId}`).then(res=>{
          this.isCollect=true
          this.$message.success("取消收藏")
        })
      },
      //借款人向机构申请贷款
      applyLoan(){
        if(this.$store.state.userInfo){
          if(this.$store.state.userInfo.roleId === 1){
            let data =new FormData()
            for (let item in this.borrowerData){
              if(item === 'collateral'){
                data.append(item,this.borrowerData[item].join(','))
              }
              data.append(item,this.borrowerData[item])


            }
            this.$axios.post('orderAgency/createOrderAgency',data).then(res=>{
              if(res.status === 200){
                this.$message.success(res.msg)
              }
            })
          }else{
            this.$message.warning("非借款人不能申请")
          }
        }else {
          this.$message.warning("用户未登录")
        }

      },
      //借款人浏览机构
      skimRecord(){
        if(this.$store.state.userInfo){
          if(this.$store.state.userInfo.roleId === 1){
            this.$axios.post(`borLook/addLook?borId=${this.$store.state.userInfo.id}&agencyId=${this.agentId}`).then(res=>{
              this.$message.success("浏览该机构")
            })
          }
        }else{
          // this.$message.warning("请先登录")
          return
        }

      }

    },
    created() {
      this.organId = this.$route.params.id
      this.getDetail(this.organId)
      this.getProduct(this.organId)
      this.getVictory(this.organId)
      this.getProvince()
      this.skimRecord()
    }
  }
</script>

