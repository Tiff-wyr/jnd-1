<template>
  <div>
    <div class="agentC">
      <div class="clearfix">
        <div class="agentItem fll" v-for="(item,index) in tableData">
          <div class="clearfix fs">
            <img :src="item.product.productLogo" alt="" class="fll pic">
            <div class="fll ml4">
              <div class="name">{{item.product.productName}}</div>
              <div class="job">{{item.product.productPublisher}}</div>
              <div class="tel">{{item.product.productStartAmount}}-{{item.product.productEndAmount}}</div>
            </div>
            <div class="fll sub" @click="sub">X</div>
          </div>
          <div class="mt16 little-item mb20">{{item.product.productCharacteristic}}</div>
          <div class="btn">立即联系</div>
        </div>
      </div>

    </div>
    <div class="page" style="margin-top: 50px;text-align: right">
      <el-pagination
        @size-change="handleSizeChange"
        @current-change="handleCurrentChange"
        background
        :page-size="size"
        :pager-count="5"
        layout="prev, pager, next"
        :total="count">
      </el-pagination>
    </div>
  </div>

</template>

<script>
  import {mapState} from 'vuex'
    export default {
        name: "productCollect",
      data(){
        return {
          page: 1,
          size: 5,
          count: 6,
          tableData:[
            {
              product:{
                productName:'',
                productPublisher:'',
                productCharacteristic:'',
                productStartAmount:'',
                productEndAmount:'',
                productLogo:'',
              }

            },
          ]
        }
      },
      computed: {
        ...mapState(['userInfo'])
      },
      methods:{
        getProductColl(){
          this.$axios.post(`borpro/selectByBorId/${this.userInfo.id}/${this.page}/${this.size}`).then(res=>{
            this.tableData=res.list
            this.count=res.totalCount

          })
        },
        handleCurrentChange (val) {
          this.page = val
          this.getProductColl()

        },
        handleSizeChange (val) {
          this.size = val
          this.getProductColl()
        },
        sub(){

        },
      },
      created(){
        this.getProductColl()
      }
    }
</script>

