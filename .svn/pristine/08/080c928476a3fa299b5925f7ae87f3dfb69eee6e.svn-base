      <textarea name="" :disabled="!isEdit" id="" cols="30" rows="10" class="fll ml20" style="width: 200px;border-color: #ccc;padding: 9px 12px" v-model="organMessData.agencyIntroduction"></textarea>
    </div>

    <div class="person-item clearfix">
